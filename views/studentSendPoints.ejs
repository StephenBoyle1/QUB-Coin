    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>

<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/homePage">Home Page</a>


        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/studentWallet">Wallet</a></li>
                <li><a href="/studentDisplayClasses">Display Classes</a></li>
                <li><a href="/studentLogAttendance">Log Attendance</a></li>
                <li><a href="/logout">Log Out</a></li>

            </ul>


        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>


     <div class="text-primary page-header">
      <h1>Send Coins</h1>
     </div>

    <form class="form-horizontal" role="form" method="post">

        <div class="form-group">
            <label for="className" class="col-sm-2 control-label">Class Name</label>
            <div class="col-xs-4">
                <input name="className" type="text" class="form-control" placeholder="Name" value="<%= theClass.name %>"
                       readonly>
            </div>
        </div>
        <div class="form-group">
            <label for="classInstructor" class="col-sm-2 control-label">Class Instructor</label>
            <div class="col-xs-4">
                <input name="classInstructor" type="text" class="form-control" value="<%= theClass.instructor.name %> (<%= theClass.instructor.email %>)" readonly>
                <input name="classInstructorId" type="hidden" class="form-control" value="<%= theClass.instructor.id %>" readonly>
            </div>
        </div>

        <div class="form-group">
            <label for="pointsAmount" class="col-sm-2 control-label">Select Amount of Points</label>
            <div class="col-xs-4 ">
                <select name="pointsAmount" class="form-control">
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="feedbackRate" class="col-sm-2 control-label">Choose Your Feedback</label>
            <div class="col-xs-4 ">
                <select name="feedbackRate" class="form-control"><
                    <option value="<%= FeedbackRateEnum.Excellent %>">Excellent</option>
                    <option value="<%= FeedbackRateEnum.Good %>">Good</option>
                    <option value="<%= FeedbackRateEnum.Average %>">Average</option>
                    <option value="<%= FeedbackRateEnum.Poor %>">Poor</option>
                </select>
            </div>
        </div>

        <div class="container">
            <div class="col-sm-offset-2 col-sm-10">
                <!-- Trigger the modal with a button -->
                <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Send Coins</button>

                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                <p>You have successfully sent your coins.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>